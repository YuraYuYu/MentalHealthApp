@model MentalHealthApp.Models.Appointment

@{
    ViewBag.Title = "Appointment Details";
}

<h2>Details</h2>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Psychologist</dt>
        <dd>@Model.Psychologist.FirstName @Model.Psychologist.LastName</dd>

        <dt>User</dt>
        <dd>@Model.User.Email</dd>

        <dt>Date</dt>
        <dd>@Model.AppointmentDate</dd>
        <dt>Attached Case File</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.CaseFilePath))
            {
                <a href="@Url.Content(Model.CaseFilePath)" download>Download Case File</a>
            }
            else
            {
                <span>No file attached</span>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index", "Manage")
</p>
