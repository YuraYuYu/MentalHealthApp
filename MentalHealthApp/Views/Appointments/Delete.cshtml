@model MentalHealthApp.Models.Appointment

@{
    ViewBag.Title = "Delete Appointment";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Psychologist</dt>
        <dd>@Model.Psychologist.FirstName @Model.Psychologist.LastName</dd>

        <dt>User</dt>
        <dd>@Model.User.Email</dd>

        <dt>Date</dt>
        <dd>@Model.AppointmentDate</dd>
    </dl>
    <div class="form-group">
        <dl class="dl-horizontal">
            <dt>
                Current Case File
            </dt>
            <dd>
                @if (!string.IsNullOrEmpty(Model.CaseFilePath))
                {
                    <a href="@Url.Content(Model.CaseFilePath)" target="_blank">Download File</a>
                }
                else
                {
                    <p>No file uploaded.</p>
                }
            </dd>
        </dl>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color col-md-3">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index", "Manage")
        </div>
    }
</div>
